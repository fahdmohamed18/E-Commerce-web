@model Product
@using System.Globalization
<h1 class="alert alert-danger text-center"> Are you want to delete this Employee </h1> 

<div class="row">
	<dl class="row col-6 ">
		<dt>Id</dt>
		<dd>@Model.Id</dd>
		<dt>full name</dt>
		<dd>@Model.Name</dd>
		<dt>Description</dt>
		<dd>@Model.Description</dd>
		<dt>Quantity</dt>
		<dd>@Model.Quantity</dd>
		<dt>Price</dt>
		<dd>@Model.Price.ToString("C2", CultureInfo.CreateSpecificCulture("ar-EG"))</dd>
		<dt>Category</dt>
		<dd>@Model.Category.Name</dd>
		
	</dl>
	<img src="@Model.ImagePath" class=" col-4" style="object-fit:contain" />


</div>

<form method="post" asp-controller="Products" asp-action="DeleteCurrent">
	<input type="hidden" asp-for="Id"/>
	<button type="submit" class="btn btn-danger col-2 mb-1">Confirm Delete</button>

</form>
<a asp-controller="Products" asp-action="GetIndexView" class="btn btn-secondary col-2">Back to list</a>