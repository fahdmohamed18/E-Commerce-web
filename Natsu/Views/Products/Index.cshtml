
@model IEnumerable<Product>  
<h1 class="text-center" style="color: brown;">Proudcts Page</h1>

<a asp-controller="Products" asp-action="GetCreateView" class="btn">Create New</a>
@if (Model.Count() > 0)
{
<table class=" table table-bordered table-hover caption-top ">
	<caption class="text-center"> Products</caption>
	<thead>
			<tr>
				<th>@Html.DisplayNameFor(prod => prod.Id)</th>
				<th>@Html.DisplayNameFor(prod => prod.Name)</th>
				<th>@Html.DisplayNameFor(prod => prod.Description)</th>
				<th>@Html.DisplayNameFor(prod => prod.Quantity)</th>
				<th>@Html.DisplayNameFor(prod => prod.Price)</th>
				<th>@Html.DisplayNameFor(prod => prod.ImageFile)</th>
				<th>Details</th>		 
			</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.Name</td>
				<td>@product.Description</td>
				<td>@product.Quantity</td>
				<td>@product.Price</td>
					<td><img src="@product.ImagePath" style="object-fit:contain max-width:100px; max-height:100px; " /></td>

					<td>
						<a class="btn" asp-controller="Products" asp-action="GetDetailsView" asp-route-id="@product.Id" title="list">
							Details
						</a>&nbsp;&nbsp;
						<a class="btn " asp-controller="Products" asp-action="GetEditView" asp-route-id="@product.Id" title="Edit">
							Edit
						</a>&nbsp;&nbsp;
						<a class="btn " asp-controller="Products" asp-action="GetDeleteView" asp-route-id="@product.Id" title="Delete">Delete</a>
						
						<a class="btn btn-danger" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.Id" asp-route-quantity="1" title="Delete">
							Add to cart
							</a>
						
					</td>
			</tr>
			
		}
	</tbody>
		</table>
}
else
{
	<h1 class="alert alert-danger text-center"> There is no Data</h1>
}
