@model Natsu.Models.Category
@using System.Globalization

<h1>Details</h1>
<h2>Category</h2>
<hr />
<dl class="row">

    <dt class="col-sm-2">Category Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
	<dt class="col-sm-2">Description</dt>
 	<dd class="col-sm-10">@Model.Description</dd>
 
</dl>

<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Prouduct Name </th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    <a asp-controller="Products" asp-action="GetDetailsView" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                        @product.Name 
                    </a>
                </td>
                <td>
                    <a asp-controller="Products" asp-action="GetDetailsView" asp-route-id="@product.Id" class="btn ">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Categories" asp-action="GetIndexView">Back to list</a>